<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/name"/>
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/question" android:layout_alignParentLeft="true" android:layout_marginLeft="25dp"
                android:layout_alignParentTop="true" android:layout_marginTop="0dp"
                android:layout_toLeftOf="@+id/user_icon"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_icon" android:layout_alignParentLeft="false"
                android:layout_alignParentTop="true" android:layout_marginTop="0dp"
                android:layout_alignParentRight="true" android:layout_marginRight="25dp"
                android:focusableInTouchMode="false"/>
    </RelativeLayout>
</LinearLayout>