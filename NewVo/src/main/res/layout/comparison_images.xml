<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="false">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:visibility="gone"
        android:id="@+id/buffer1">
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:layout_marginRight="1dp"
        android:background="@color/light_transparent_background"
        android:id="@+id/first_image_container"
        android:layout_marginBottom="2dp"
        android:weightSum="2">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/first_image" android:layout_margin="2dp" android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/first_image_description"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:visibility="gone"
        android:id="@+id/buffer2">
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="1dp"
        android:background="@color/light_transparent_background"
        android:id="@+id/second_image_container"
        android:layout_marginBottom="2dp"
        android:visibility="visible">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/second_image" android:layout_margin="2dp" android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/second_image_description"
            />
    </LinearLayout>

</LinearLayout>