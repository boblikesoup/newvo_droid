<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:layout_marginRight="1dp"
        android:background="@color/light_transparent_background"
        android:id="@+id/first_image_container"
        android:layout_marginBottom="2dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/first_image" android:layout_margin="2dp" android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="1dp"
        android:background="@color/light_transparent_background"
        android:id="@+id/second_image_container"
        android:layout_marginBottom="2dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/second_image" android:layout_margin="2dp" android:scaleType="centerCrop"
                android:layout_weight="1.0"
                android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>