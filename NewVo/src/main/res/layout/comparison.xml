<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:baselineAligned="false"
              android:background="@null"
              android:id="@+id/comparison_view">


    <include android:layout_width="match_parent"
             android:layout_height="match_parent"
             layout="@layout/comparison_title" android:layout_gravity="center_horizontal"
             android:layout_marginBottom="2dp"
             android:layout_marginTop="2dp"
             android:layout_weight="0.15"/>
    <include android:layout_width="match_parent"
             android:layout_height="match_parent"
             layout="@layout/comparison_images" android:layout_gravity="center_horizontal"
             android:layout_weight="0.65"/>
    <include android:layout_width="match_parent"
             android:layout_height="match_parent"
             layout="@layout/comparison_selection" android:layout_gravity="center_horizontal"
             android:layout_weight="0.200"/>
</LinearLayout>