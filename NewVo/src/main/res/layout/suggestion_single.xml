<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@color/light_transparent_background"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">

        <TextView
            android:id="@+id/suggestion_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:layout_toLeftOf="@+id/suggestion_x"
            android:singleLine="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_margin="4dp"/>

        <ImageButton
            android:id="@+id/suggestion_x"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:baselineAlignBottom="false"
            android:contentDescription="@string/remove_comment"
            android:scaleType="centerInside"
            android:src="@drawable/x_simple"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:indeterminateOnly="true"
            android:indeterminate="true"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/suggestion_x"
            android:layout_alignEnd="@+id/suggestion_x"
            android:layout_alignLeft="@+id/suggestion_x"
            android:layout_alignStart="@+id/suggestion_x"
            android:layout_margin="10dp"
            android:id="@+id/in_progress"
            android:visibility="gone"/>

    </RelativeLayout>
</LinearLayout>